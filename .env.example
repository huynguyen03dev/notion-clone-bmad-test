# Database Configuration
# Local development database
DATABASE_URL="postgresql://kanban_user:kanban_password@localhost:5433/kanban_db?schema=public&connection_limit=20&pool_timeout=20&connect_timeout=10"

# Test database (optional - for running tests)
TEST_DATABASE_URL="postgresql://kanban_user:kanban_password@localhost:5432/kanban_test_db?schema=public&connection_limit=5&pool_timeout=10"

# Production database (example - use your actual production values)
# DATABASE_URL="postgresql://user:password@host:port/database?schema=public&connection_limit=50&pool_timeout=30&connect_timeout=10&sslmode=require"

# Connection Pool Configuration
# These are included in DATABASE_URL but can be overridden
DB_CONNECTION_LIMIT=20
DB_POOL_TIMEOUT=20
DB_CONNECT_TIMEOUT=10

# Next.js Configuration
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Development
NODE_ENV="development"

# Optional: Database Monitoring
# Enable detailed query logging (development only)
PRISMA_LOG_QUERIES=true

# Optional: Performance Monitoring
# Enable metrics collection
ENABLE_DB_METRICS=true
